{
  "files": [],
  "references": [
    { "path": "./tsconfig.app.json" },
    { "path": "./tsconfig.node.json" }
  ],
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },
    "noEmitOnError": false,
    "skipLibCheck": true, 
    "allowJs": true, 
    "noEmit": false, 
    "strict": false,  
    "esModuleInterop": true,  
    "allowImportingTsExtensions": false,  
    "moduleResolution": "node",
    "resolveJsonModule": true,  
    "skipDefaultLibCheck": true 
  }
}
